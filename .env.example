# Redis Configuration
# Redis server hostname or IP address
REDIS_HOST=localhost
# Redis server port
REDIS_PORT=6379
# Redis password (leave empty if no password)
REDIS_PASSWORD=
# Redis database number
REDIS_DB=0

# MySQL Configuration (for permanent feedback storage)
# MySQL server hostname or IP address
MYSQL_HOST=localhost
# MySQL server port
MYSQL_PORT=3306
# MySQL database name
MYSQL_DATABASE=mcp_chat
# MySQL username
MYSQL_USER=mcp_user
# MySQL password
MYSQL_PASSWORD=
# MySQL connection pool size
MYSQL_POOL_SIZE=5

# NTP Configuration
# Primary NTP server for time synchronization
NTP_SERVER=pool.ntp.org
# Backup NTP server if primary fails
NTP_BACKUP_SERVER=time.google.com
# NTP request timeout in seconds
NTP_TIMEOUT=5

# Server Configuration
# Port for the FastAPI server to run on
SERVER_PORT=8000
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Home Assistant Configuration
# Home Assistant server URL (e.g., http://ha.internal or http://homeassistant.local:8123)
HA_URL=http://ha.internal
# Home Assistant Long-Lived Access Token (generate in HA: Profile -> Security -> Long-Lived Access Tokens)
HA_TOKEN=
# Cache TTL for device states in seconds (default: 30 seconds)
HA_CACHE_TTL=30